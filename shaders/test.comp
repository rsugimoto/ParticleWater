#version 430

layout(local_size_x=16) in;

layout(std430) buffer shader_data{
    vec4 array[];
};

void main(){
    uint threadIndex = gl_GlobalInvocationID.x;
    if(threadIndex==0){ array[0] = vec4(-0.5,-0.5,0.9,1.0);}
    else if(threadIndex==1){ array[1] = vec4(0.5,-0.5,0.0,1.0);}
    else if(threadIndex==2){ array[2] = vec4(0.0,0.73,-0.5,1.0);}
}
